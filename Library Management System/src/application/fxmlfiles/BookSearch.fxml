<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.fxmlfilescontroller.BookSearch">
   <children>
      <HBox layoutX="10.0" layoutY="10.0" spacing="10.0">
         <children>
            <Label text="Enter Details" />
            <ComboBox fx:id="editor" editable="true" prefWidth="150.0" promptText="Book ID/Name" />
            <Button fx:id="search" mnemonicParsing="false" onAction="#search" text="Search" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox spacing="10.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="5.0">
               <children>
                  <Label fx:id="bkname" alignment="CENTER" prefWidth="200.0" textAlignment="CENTER" />
                  <Label fx:id="bkAuthor" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefWidth="200.0" textAlignment="CENTER" />
                  <Label fx:id="bkPubDate" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefWidth="200.0" textAlignment="CENTER" />
                  <Label fx:id="bkPublisher" alignment="CENTER" layoutX="10.0" layoutY="44.0" prefWidth="200.0" textAlignment="CENTER" />
                  <Label fx:id="bkCategory" alignment="CENTER" layoutX="10.0" layoutY="61.0" prefWidth="200.0" textAlignment="CENTER" />
                  <Label fx:id="bkPrice" alignment="CENTER" layoutX="10.0" layoutY="78.0" prefWidth="200.0" textAlignment="CENTER" />
                  <Label fx:id="bkAvailable" alignment="CENTER" layoutX="10.0" layoutY="95.0" prefWidth="200.0" textAlignment="CENTER" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox spacing="5.0" style="-fx-border-radius: 15; -fx-border-color: grey;">
               <children>
                  <ImageView fx:id="frontCover" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
